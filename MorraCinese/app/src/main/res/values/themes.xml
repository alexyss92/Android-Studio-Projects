<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MorraCinese" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="header_text_style">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="fontFamily">@font/hey_comic</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor">#FBC02D</item>
        <item name="android:shadowDx">@dimen/header_offset_dx</item>
        <item name="android:shadowDy">@dimen/header_offset_dy</item>
        <item name="android:shadowRadius">@dimen/header_shadow_blur</item>
    </style>


    <style name="header_text" parent="header_text_style">
        <item name="android:textSize">@dimen/other_text_size</item>
    </style>
</resources>