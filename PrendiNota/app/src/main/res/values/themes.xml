<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrendiNota" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="header_style">
        <item name="android:fontFamily">@font/blacksword</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowDx">@dimen/header_shadow_dx</item>
        <item name="android:shadowDy">@dimen/header_shadow_dy</item>
        <item name="android:shadowColor">@color/header_shadow_color</item>
        <item name="android:shadowRadius">@dimen/header_shadow_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="subheader_style" parent="header_style">
        <item name="android:fontFamily">@font/ancient</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="input_text_style" parent="subheader_style">
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/no_colour</item>
        <item name="android:text">@string/no_text</item>
    </style>


    <dimen name="subheader_text_size">30</dimen>
</resources>