<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingCart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="header_layout">
        <item name="android:textSize">@dimen/header_size</item>
        <item name="android:shadowColor">@color/header_shadow_color</item>
        <item name="android:shadowDy">@dimen/header_shadow_dy</item>
        <item name="android:shadowDx">@dimen/header_shadow_dx</item>
        <item name="android:padding">@dimen/header_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/header</item>
        <item name="android:text">@string/header_text</item>
        <item name="android:textColor">@color/header_color</item>
    </style>

    <style name="subheader_layout" parent="header_layout">
        <item name="android:textSize">@dimen/subheader_text_size</item>
        <item name="android:textColor">@color/subheader_color</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="input_layout" parent="subheader_layout">
        <item name="android:textSize">@dimen/input_layout</item>
        <item name="android:text">@string/notext</item>
        <item name="android:color">@color/black</item>
    </style>


    <string name="notext" />
    <color name="header_color">#D50000</color>
    <color name="subheader_color">#303F9F</color>
</resources>